# Dockerfile for Agent service
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p /app/models /app/sample_data

# Make start script executable (for manual use)
RUN chmod +x /app/start_agent.sh

# Expose port
EXPOSE 8001

# Start agent using Python module (reads PORT env var correctly)
# This works even if Railway overrides CMD with --port $PORT
# The Python code in main.py will read PORT from environment
CMD ["python", "-m", "agents.smart_campus_energy_agent.main"]


