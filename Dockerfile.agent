# Dockerfile for Agent service
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p /app/models /app/sample_data

# Make start scripts executable
RUN chmod +x /app/start_agent.sh /app/entrypoint_agent.sh

# Expose port
EXPOSE 8001

# Use Python module directly - it reads PORT from environment variable
# This avoids PORT expansion issues entirely
# If Railway overrides CMD, the entrypoint script will handle it
ENTRYPOINT ["/app/entrypoint_agent.sh"]

# Default: Use Python module which reads PORT from environment
CMD ["python", "-m", "agents.smart_campus_energy_agent.main"]


